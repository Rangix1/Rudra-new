    shortDescription: "mood detect krke reply dega",
    longDescription: "User ke mood ke hisaab se automatic reply dega",
    category: "fun",
    guide: "{pn} [flirt | roasted | sad | happy | bejti | angry]"
  },

  onStart: async function ({ message, args }) {
    const mood = args[0]?.toLowerCase();
    if (!mood) return message.reply("Pehle mood batao jaise: flirt, roasted, sad, happy, bejti, angry");

    let replies = [];

    if (mood === 'flirt') {
      replies = [
        "Tumhare bina toh sab kuch adhoora lagta hai. ğŸ˜˜",
        "Aaj toh tumhari muskaan ne mera din bana diya! ğŸ˜Šâ¤ï¸",
        "Kya tumhare paas ek map hai? Kyunki main tumhare dil mein kho gaya hoon. ğŸ˜â¤ï¸",
        // ...baaki flirt replies
      ];
    }

    if (mood === 'roasted') {
      replies = [
        "Arey bhai, kisne tujhe aise roast kiya? ğŸ˜‚ğŸ”¥",
        "Teri toh hawa nikal gayi, ab kahan jaayega? ğŸ˜œğŸ”¥",
        // ...baaki roasted replies
      ];
    }

    if (mood === 'sad') {
      replies = [
        "Aaj kuch zyada hi udaas hoon main. ğŸ˜”ğŸ’”",
        "Zindagi kabhi kabhi thoda mushkil ho jaati hai. ğŸ˜",
        // ...baaki sad replies
      ];
    }

    if (mood === 'happy') {
      replies = [
        "Aaj ka din toh kuch special lag raha hai! ğŸ˜„ğŸ‰",
        "Mera mood aaj toh full happy hai! ğŸ˜ŠğŸ’–",
        // ...baaki happy replies
      ];
    }

    if (mood === 'bejti') {
      replies = [
        "Tumse beizzati milke, thoda chill ho gaya hoon! ğŸ˜†ğŸ”¥",
        "Koi bhi aise beizzati kiyo, thoda aur chalega! ğŸ˜‚ğŸ”¥",
        // ...baaki bejti replies
      ];
    }

    if (mood === 'angry') {
      replies = [
        "Aaj kuch zyada hi gussa hoon main! ğŸ˜¡ğŸ”¥",
        "Mujhe lagta hai main thoda gussa ho gaya hoon. ğŸ˜¤",
        // ...baaki angry replies
      ];
    }

    if (replies.length === 0) {
      return message.reply("Mood sahi se likh bhai! Valid options: flirt, roasted, sad, happy, bejti, angry");
